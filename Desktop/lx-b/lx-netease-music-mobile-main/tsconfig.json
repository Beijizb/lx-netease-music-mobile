{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "types": ["react-native"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "lib": ["ES2015", "ES2017", "ES2018", "ES2019", "ES2020", "ES2021", "ESNext"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "build", "dist"]
}
